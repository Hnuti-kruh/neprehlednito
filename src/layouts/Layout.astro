		<!-- Consent banner -->
		<div
			id="consent-banner"
			class="consent-banner"
			role="region"
			aria-label="Nastavení souhlasu s analytikou"
			hidden
		>
			<div class="container consent-banner__inner">
				<p class="consent-banner__text">
					Pomozte nám zviditelňovat péči. Povolit anonymní měření návštěvnosti
					(Matomo)?
					<a
						href="https://www.hnutikruh.cz/organisation/legal"
						target="_blank"
						rel="noopener">Zásady ochrany osobních údajů</a
					>.
				</p>
				<div class="consent-banner__actions">
					<button
						id="consent-accept"
						class="btn btn--small btn--primary"
						type="button">Povolit analytiku</button
					>
					<button
						id="consent-decline"
						class="btn btn--small btn--ghost"
						type="button">Pouze nezbytné</button
					>
				</div>
			</div>
		</div>

		<script>
			(function () {
				const KEY = "hk_matomo_consent";
				const banner = document.getElementById("consent-banner");
				const btnAccept = document.getElementById("consent-accept");
				const btnDecline = document.getElementById("consent-decline");

				function loadMatomo() {
					if (window._matomoLoaded) return;
					window._matomoLoaded = true;
					var _paq = (window._paq = window._paq || []);
					/* tracker methods like "setCustomDimension" should be called before "trackPageView" */
					_paq.push(["trackPageView"]);
					_paq.push(["enableLinkTracking"]);
					(function () {
						var u = "//matomo.czechnomad.cz/";
						_paq.push(["setTrackerUrl", u + "matomo.php"]);
						_paq.push(["setSiteId", "6"]);
						var d = document,
							g = d.createElement("script"),
							s = d.getElementsByTagName("script")[0];
						g.async = true;
						g.src = u + "matomo.js";
						s.parentNode.insertBefore(g, s);
					})();
				}

				function hideBanner() {
					if (banner) banner.hidden = true;
				}
				function showBanner() {
					if (banner) banner.hidden = false;
				}

				// Init
				try {
					const stored = localStorage.getItem(KEY);
					if (stored === "granted") {
						loadMatomo();
					} else if (stored === "denied") {
						// do nothing, keep Matomo disabled
					} else {
						showBanner();
					}
				} catch (_) {
					// localStorage not available, show banner as fallback
					showBanner();
				}

				// Actions
				if (btnAccept) {
					btnAccept.addEventListener("click", () => {
						try {
							localStorage.setItem(KEY, "granted");
						} catch (_) {}
						loadMatomo();
						hideBanner();
					});
				}
				if (btnDecline) {
					btnDecline.addEventListener("click", () => {
						try {
							localStorage.setItem(KEY, "denied");
						} catch (_) {}
						hideBanner();
					});
				}
			})();
		</script>

		<style>
			.brand__image {
				width: 5rem;
				display: block; /* remove inline-gap so it hugs top-left */
				margin: 0.5rem;
			}
		</style>
	</body>
