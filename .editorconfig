root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default to tabs in markup (project uses tabs in Astro files)
[*.astro]
indent_style = tab
indent_size = 2

# Use 2 spaces in common web files
[*.{js,ts,jsx,tsx,css,scss,html,json,md,yml,yaml}]
indent_style = space
indent_size = 2
